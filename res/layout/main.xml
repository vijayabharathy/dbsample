<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout2">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="horizontal">
            <Button android:text="Settings" android:layout_height="wrap_content" android:id="@+id/setting" android:layout_width="wrap_content"></Button>
            <SeekBar android:id="@+id/seekBar1" android:layout_width="100dip" android:layout_height="wrap_content" android:layout_gravity="top"></SeekBar>
            
        </LinearLayout>
    </LinearLayout>
<Spinner 
	android:id="@+id/expenditure_type" 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent"
	android:prompt="@string/expenditure_prompt"
	/>


<EditText 
	android:layout_height="wrap_content" 
	android:id="@+id/new_expenditure_type"	
	android:layout_width="fill_parent"
	android:hint="Enter the Expenditure type">
	</EditText>
	
<EditText 
	android:layout_height="wrap_content" 
	android:id="@+id/amount_put"	
	android:numeric="integer|decimal"
	android:layout_width="fill_parent"
	android:hint="Enter the amount you spend">
	</EditText>




<TextView android:layout_height="wrap_content" android:id="@+id/balance_amount" android:layout_width="fill_parent" android:text="@string/balance_text"></TextView>
<Button android:text="Save" android:layout_height="wrap_content" android:id="@+id/save_button" android:layout_width="fill_parent"></Button>
<TableLayout android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
    
    
</TableLayout>
</LinearLayout>
